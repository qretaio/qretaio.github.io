---
const currentYear = new Date().getFullYear();
const { question, tag, ctaLabel } = Astro.props;
---
<section class="relative pt-24 pb-5 px-6 gradient-primary text-center text-white overflow-hidden">
	<div class="absolute inset-0 bg-linear-to-r from-transparent via-white/5 to-transparent"></div>
	<div class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full -mr-32 -mt-32"></div>
	<div class="absolute bottom-0 left-0 w-48 h-48 bg-white/5 rounded-full -ml-24 -mb-24"></div>
	<div class="relative max-w-4xl mx-auto z-10">
		<h2 class="text-4xl md:text-5xl font-bold mb-6 text-white" style="font-family: var(--font-family-display);">{question}</h2>
		<p class="text-xl md:text-2xl mb-12 text-white/95 max-w-3xl mx-auto leading-relaxed font-medium">
			{tag}
		</p>
		<div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
			<a href="https://cal.com/qretaio/30min" target="_blank" rel="noopener" class="btn-cta text-xl px-12 py-6">
				Schedule a Call
			</a>
			<a href="mailto:qretadev@gmail.com?subject=Let's start the conversation" class="inline-flex items-center justify-center px-12 py-6 text-xl font-semibold text-white border-2 border-white/30 rounded-xl hover:border-white hover:bg-white hover:text-slate-900 transition-all duration-300">
				{ctaLabel}
			</a>
		</div>
		<div class="text-center text-lg w-full pt-8 border-t border-white/20">
			<p class="text-white/70">&copy; {currentYear} Qreta</p>
			<div class="mt-6 flex justify-center items-center gap-6">
				<a href="https://cal.com/qretaio/30min" target="_blank" rel="noopener" class="text-white/80 hover:text-white transition-colors duration-300 flex items-center gap-2" title="Schedule a meeting">
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
					</svg>
					<span>Schedule</span>
				</a>
				<a href="https://linkedin.com/company/qretaio" target="_blank" rel="noopener" class="text-white/80 hover:text-white transition-colors duration-300 flex items-center gap-2" title="LinkedIn">
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/>
					</svg>
					<span>LinkedIn</span>
				</a>
				<a href="https://github.com/qretaio" target="_blank" rel="noopener" class="text-white/80 hover:text-white transition-colors duration-300 flex items-center gap-2" title="GitHub">
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.295 24 12c0-6.63-5.37-12-12-12"/>
					</svg>
					<span>GitHub</span>
				</a>
				<a href="https://twitter.com/qretaio" target="_blank" rel="noopener" class="text-white/80 hover:text-white transition-colors duration-300 flex items-center gap-2" title="Twitter">
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M22.46 6c-.85.38-1.75.64-2.7.76 1-.6 1.76-1.55 2.12-2.68-.93.55-1.96.95-3.06 1.17-.88-.94-2.13-1.53-3.51-1.53-2.66 0-4.81 2.16-4.81 4.81 0 .38.04.75.13 1.1-4-.2-7.54-2.11-9.91-5.02-.42.72-.66 1.56-.66 2.46 0 1.68.85 3.16 2.14 4.02-.79-.02-1.53-.24-2.18-.6v.06c0 2.35 1.67 4.31 3.88 4.76-.41.11-.84.17-1.28.17-.31 0-.62-.03-.92-.08.63 1.96 2.45 3.39 4.61 3.43-1.69 1.32-3.83 2.1-6.15 2.1-.4 0-.8-.02-1.19-.07 2.19 1.4 4.78 2.22 7.57 2.22 9.07 0 14.02-7.52 14.02-14.02 0-.21 0-.41-.01-.61.96-.69 1.79-1.56 2.45-2.55z"/>
